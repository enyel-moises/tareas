!/bin/bash
USUARIO=$(whoami)
ORIGEN="/home/$USUARIO"
DESTINO="/home/$USUARIO/backups"
mkdir -p "DESTINO"
FECHA=$(date +"%d-%m-%Y:%H:%M")
ARCHIVO="backup-$FECHA.tar.gz"
tar -czvf "DESTINO/$ARCHIVO" "$ORIGEN"
echo "Backup completado: $DESTINO/$ARCHIVO"


